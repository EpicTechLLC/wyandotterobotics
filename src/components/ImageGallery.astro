---
import Image from '~/components/common/Image.astro';
import type { ImageMetadata } from 'astro';

const { images, albumTitle } = Astro.props;

---

<style>
  .gallery-button {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;
    outline: none;
  }

  .gallery-button:hover {
    outline: 2px solid gray;
    border-radius: 0.25rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
    z-index: 50;
  }

  .modal.active {
    display: flex;
  }

  .loader {
    border: 4px solid white;
    border-top-color: transparent;
    border-radius: 50%;
    width: 4rem;
    height: 4rem;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>

<div>
  <!-- Gallery -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 place-items-center mx-auto p-10">
    {
      images.map((image: ImageMetadata) => {
        if (image) {
          return (
            <button
              class="gallery-button mb-4 w-full"
              data-src={image.src}
              data-width={image.width || 1200}
              data-height={image.height || 800}
            >
              <Image
                src={image}
                alt={`Thumbnail from ${albumTitle}`}
                aspectRatio="16:9"
                class="w-full h-auto"
                loading="lazy"
              />
            </button>
          );
        }
      })
    }
  </div>

  <!-- Modal -->
  <div id="modal" class="modal" aria-hidden="true">
    <div class="relative">
      <div id="modal-loader" class="loader"></div>
      <img id="modal-image" class="max-w-full max-h-screen rounded z-20 hidden" />
      <button id="modal-close" class="absolute top-5 right-5 text-white text-3xl font-bold cursor-pointer z-30">
        &times;
      </button>
    </div>
  </div>
</div>

<script>
  const buttons = document.querySelectorAll('.gallery-button');
  const modal = document.getElementById('modal');
  const modalImage = document.getElementById('modal-image') as HTMLImageElement | null;
  const modalLoader = document.getElementById('modal-loader');
  const modalClose = document.getElementById('modal-close');

  if (!modal || !modalImage || !modalLoader || !modalClose) {
    console.error('One or more modal elements are missing in the DOM.');
    throw new Error('Modal elements are not properly initialized.');
  }

  buttons.forEach((button) => {
    button.addEventListener('click', () => {
      const src = button.getAttribute('data-src');
      if (!src) return;

      modal.classList.add('active');
      modalLoader.classList.remove('hidden');
      modalImage.classList.add('hidden');

      const img = new Image();
      img.src = src;
      img.onload = () => {
        modalImage.src = src;
        modalLoader.classList.add('hidden');
        modalImage.classList.remove('hidden');
      };
    });
  });

  modal.addEventListener('click', () => {
    modal.classList.remove('active');
  });

  modalClose.addEventListener('click', (event) => {
    event.stopPropagation();
    modal.classList.remove('active');
  });

  modalImage.addEventListener('click', (event) => {
    event.stopPropagation();
  });
</script>
