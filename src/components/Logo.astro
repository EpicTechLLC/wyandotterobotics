---
import { SITE } from 'astrowind:config';
import Image from '~/components/common/Image.astro';
const mascotLogo = '~/assets/images/1847-mascot-color.png';
---

<span class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-2xl font-bold whitespace-nowrap dark:text-white">
  <Image src={mascotLogo} alt="Logo" class="inline-block mr-2" width="65px" />
  {SITE?.name}
</span>
