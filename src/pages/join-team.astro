---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Join Team • Wyandotte Robotics',
  description: 'Apply to join Wyandotte Robotics (WRATH) via our Google Form.',
};
---

<Layout metadata={metadata}>
  <main class="px-0">
    <section class="max-w-4xl mx-auto px-4 py-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">Join Wyandotte Robotics</h1>
      <p class="text-muted mb-6">
        Fill out the form below to apply. If the form doesn’t load,
        <a
          href="https://docs.google.com/forms/d/e/1FAIpQLSdqbCwrdG58KhE1FQ__rvJPnWU5O9GCFtNjgRJyRFKfUBqDEg/viewform"
          class="text-primary underline"
          target="_blank"
          rel="noopener noreferrer">open it here</a
        >.
      </p>
    </section>
    <div class="max-w-4xl mx-auto px-4 pb-10">
      <iframe
        src="https://docs.google.com/forms/d/e/1FAIpQLSdqbCwrdG58KhE1FQ__rvJPnWU5O9GCFtNjgRJyRFKfUBqDEg/viewform?embedded=true"
        class="block w-full border-0 h-[4500px] sm:h-[4500px] md:h-[3600px] lg:h-[3500px]"
        loading="lazy"
        referrerpolicy="no-referrer"
        tabindex="0"
      >
        Your browser does not support iframes.
      </iframe>
    </div>
  </main>
</Layout>
